{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "isolatedModules": true,
    "target": "ES2017",
    "lib": ["DOM", "ESNext"],
    "types": ["vite/client"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": { "/*": ["*"] },
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
