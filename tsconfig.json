{
  "compilerOptions": {

    // Must be set to `true` due to `esbuild` limitations.
    // https://vitejs.dev/guide/features.html#isolatedmodules
    "isolatedModules": true,

    "strict": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2017",
    "lib": ["DOM", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": { "/*": ["*"] },
    "types": [
      "vite/client",
      "@cloudflare/workers-types"
    ]
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
